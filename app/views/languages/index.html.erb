<%= content_for :additional_head do %>
  <%= javascript_include_tag "rjcarousel" %>
<% end %>

<%= content_for :document_ready do %>
  $('.carousel').initRJCarousel({counter: true, center: true}).next();
<% end %>

<%= content_for :extra_body_class do %>-languages<% end %>

<div class="languages">
  <div class="left">
    <h1>Nonsense Languages</h1>

    <p>
      These are the languages that Nonsense Engine uses to
      generate the poems found on this site. All of these
      nonsense languages are based on the very real language of one
      or more writers. You can read more about how Nonsense Engine
      uses languages to create its nonsense <%= link_to "here",
      about_index_path %>.
    </p>

  </div>

  <div class="right">
    <%= will_paginate %>

    <%= render @languages %>

    <%= will_paginate %>
  </div>

  <%= clear %>
</div>


<%= link_to 'Home', root_path %>
