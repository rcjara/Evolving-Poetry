<h1>Login</h1>

<%= form_for @user_session, :url => {:action => "create"} do |f| %>
  <%= render 'shared/errors', :object => f.object %>
  <div class="field">
    <%= f.label :user_name_or_email %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
