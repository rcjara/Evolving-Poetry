<h1> User </h1>

<p>
  <strong>User Name:</strong>
  <%= @user.username %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
  <strong>Poems Evaluated:</strong>
  <%= @user.poems_evaluated %>
</p>
<p>
  <strong>Posts:</strong>
  <%= @user.posts %>
</p>
<p>
  <strong>Total Points:</strong>
  <%= @user.total_points %>
</p>
<p>
  <strong>Remaining Points:</strong>
  <%= @user.total_points - @user.points_used %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) %> | <%= link_to "Home", root_path %>
</p>
