<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag "reset" %>
  <%= stylesheet_link_tag "main_style" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<%= render 'layouts/header' %>

<% flash.each do |key, value| %>
  <div class="flash <%= key %>"><%= value %></div>
<% end %>

<div class="main-body">
  <%= yield %>
</div>
<div class="clear"></div>
</body>
</html>
