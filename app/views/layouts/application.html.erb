<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag "reset" %>
  <%= stylesheet_link_tag "main_style" %>
  <%= javascript_include_tag :defaults, "jquery.color.js" %>
  <%= yield :additional_head %>
  <%= csrf_meta_tag %>
  <%= javascript_tag do %>
    $(document).ready( function() {
      <%= yield :document_ready %>
    });
  <% end %>

  <% javascript_tag do %>
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-26982984-1']);
    _gaq.push(['_setDomainName', 'nonsenseengine.com']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  <% end %>

</head>
<body>

<%= render 'layouts/header' %>


<div class="main-body<%= yield :extra_body_class %>">
  <% flash.each do |key, value| %>
    <% unless key == :voting_response %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  <% end %>
  <%= yield %>
</div>
<div class="clear"></div>
</body>
</html>
