<%= content_for :additional_head do %>
  <%= javascript_include_tag "markov" %>
  <%= javascript_tag "var lang, disp, cont" %>
<% end %>

<%= content_for :document_ready do %>
  lang = nonsenseEngine.markov.language();
  disp = nonsenseEngine.markov.display($('#markov-container'));
  cont = nonsenseEngine.markov.controller('languages/1.json', lang, disp);
  cont.start();
<% end %>

<div class="main-left-column">
  <div id="markov-container"></div>
</div>
<div class="main-right-column">
  <div class="home-links">
    <h1>Nonsense Engine</h1>
    <h2>computer generated poetry that evolves</h2>
    <ul>
      <li>
        <div class="left">
          <%= link_to "Evolution Chamber", :controller => :evolution_chamber, :action => :random %> &mdash;
        </div>
        <div class="right">
          Quickly take part in the evolution.
        </div>
        <%= clear %>
      </li>
      <li>
        <div class="left">
          <%= link_to "What is this nonsense?", about_path %> &mdash;
        </div>
        <div class="right">
          Basic information about Nonsense Engine. Helps make sense of it all.
        </div>
        <%= clear %>
      </li>
      <li>
        <div class="left">
          <%= link_to "Languages", languages_path %> &mdash;
        </div>
        <div class="right">
          Examine the languages before choosing which one to evolve.
        </div>
        <%= clear %>
      </li>
      <li>
        <div class="left">
          <%= link_to "The original works", authors_path %> &mdash;
        </div>
        <div class="right">
          The non-random things on which the randomness is based.
        </div>
        <%= clear %>
      </li>
      <% unless signed_in? %>
        <li>
          <%= link_to "Log in", signin_path %>
          or
          <%= link_to "Sign up", signup_path %>
          <br />
          You don't have to have an account to use the site, but you gain access to more features.  You can find out why it's a good idea to sign up
          <%= link_to "here", signup_path %>.
        </li>
      <% end %>
    </ul>
  </div>
</div>
