<%= content_for :additional_head do %>
  <%= javascript_include_tag "markov" %>
  <%= javascript_tag "var lang, disp, cont" %>
<% end %>

<%= content_for :document_ready do %>
  lang = nonsenseEngine.markov.language();
  disp = nonsenseEngine.markov.display($('#markov-container'));
  cont = nonsenseEngine.markov.controller('languages/1.json', lang, disp);
  cont.start();
<% end %>

<div class="main-left-column">
  <h2>Please excuse the mess.  This site is still under construction.</h2>
  <div id="markov-container"></div>
</div>
<div class="main-right-column">
  <div class="home-links">
    <h1>Nonsense Engine</h1>
    <h2>computer generated poetry that evolves</h2>
    <ul>
      <%= link_to :controller => :evolution_chamber, :action => :random do %>
        <li class="call-to-action">
          <p class="label">
            Evolution Chamber
          </p>
          <p class="description">
            Quickly take part in the evolution.
          </p>
        </li>
      <% end %>
      <%= link_to controller: 'about', action: 'index' do %>
        <li class="button">
          <p class="label">
            What is This Nonsense?
          </p>
          <p class="description">
            Explains just what is going on here.
          </p>
        </li>
      <% end %>
      <%= link_to languages_path do %>
        <li class="button">
          <p class="label">
            Languages
          </p>
          <p class="description">
            Choose which language to evolve.
          </p>
        </li>
      <% end %>
      <%= link_to authors_path do %>
        <li class="button">
          <p class="label">
            Original Works
          </p>
          <p class="description">
            The writings on which the randomness is based.
          </p>
        </li>
      <% end %>
      <% unless signed_in? %>
        <li>
          <%= link_to "Log in", signin_path %>
          or
          <%= link_to "Sign up", signup_path %>
          <br />
          You don't have to have an account to use the site, but you gain access to more features.  You can find out why it's a good idea to sign up
          <%= link_to "here", signup_path %>.
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= clear %>
